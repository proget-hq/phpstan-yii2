{
    "name": "proget-hq/phpstan-yii2",
    "type": "library",
    "description": "Yii2 extension for PHPStan",
    "license": "MIT",
    "authors": [
        {
            "name": "Arkadiusz Kondas",
            "email": "arkadiusz.kondas@gmail.com"
        },
        {
            "name": "Marcin Michalski",
            "email": "marcin@michalski.dev"
        }
    ],
    "require": {
        "php": "^7.2|^8.0",
        "nikic/php-parser": "^4.1.0",
        "phpstan/phpstan": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.1",
        "phpunit/phpunit": "^8.0",
        "yiisoft/yii2": "^2.0.42",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Proget\\PHPStan\\Yii2\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Proget\\Tests\\PHPStan\\Yii2\\": "tests/"
        }
    },
    "scripts": {
        "check": [
            "@check-cs",
            "@stan",
            "@tests"
        ],
        "check-cs": "@php php-cs-fixer fix --dry-run --diff",
        "fix-cs": "@php php-cs-fixer fix",
        "stan": "@php phpstan analyse -l max -c ./phpstan.neon ./src ./tests",
        "tests": "@php phpunit"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true
        }
    }
}
